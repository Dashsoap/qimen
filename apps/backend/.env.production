# 生产环境配置
NODE_ENV=production

# 数据库配置 - PostgreSQL (生产环境)
DATABASE_URL="postgresql://qimen_prod:strong_password_here@localhost:5432/qimen_production?schema=public&connection_limit=20"

# Redis配置
REDIS_URL="redis://localhost:6379/0"
REDIS_PASSWORD="redis_password_here"

# 服务器配置
PORT=3001
HOST=0.0.0.0

# JWT配置 (生产环境必须修改)
JWT_SECRET=production-super-secret-jwt-key-must-be-very-long-and-random
JWT_EXPIRES_IN=7d

# 加密配置
BCRYPT_ROUNDS=12

# OpenAI配置
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# 积分配置
REGISTER_BONUS_POINTS=500
DAILY_CHECKIN_POINTS=10
ANALYSIS_POINTS_COST=100

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=60
AI_RATE_LIMIT_MAX_REQUESTS=5

# 日志配置
LOG_LEVEL=info
LOG_PRETTY=false

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS配置
CORS_ORIGIN=http://101.201.148.8,https://your-domain.com
CORS_CREDENTIALS=true

# 短信服务配置
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=production-sms-access-key
SMS_SECRET_KEY=production-sms-secret-key
SMS_SIGN_NAME=丁未学堂
SMS_TEMPLATE_CODE=SMS_PRODUCTION_CODE