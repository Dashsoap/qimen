# 开发环境配置
NODE_ENV=development

# 数据库配置
# SQLite (开发环境)
# DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL (生产环境推荐)
DATABASE_URL="postgresql://qimen_user:your_password@localhost:5432/qimen_db?schema=public"

# Redis配置
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# 服务器配置
PORT=3001
HOST=localhost

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 加密配置
BCRYPT_ROUNDS=10

# OpenAI配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# 积分配置
REGISTER_BONUS_POINTS=1000
DAILY_CHECKIN_POINTS=10
ANALYSIS_POINTS_COST=100

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=10

# 日志配置
LOG_LEVEL=debug
LOG_PRETTY=true

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS配置
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:10086
CORS_CREDENTIALS=true

# 短信服务配置（可选）
SMS_PROVIDER=aliyun
SMS_ACCESS_KEY=your-sms-access-key
SMS_SECRET_KEY=your-sms-secret-key
SMS_SIGN_NAME=丁未学堂
SMS_TEMPLATE_CODE=SMS_123456789